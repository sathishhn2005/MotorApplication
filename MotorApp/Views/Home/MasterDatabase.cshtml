@model IEnumerable<MotorApp.BusinessEntities.MotorModel>



@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Master Motor</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="./">Home</a></li>
        <li class="breadcrumb-item">Masters</li>
        <li class="breadcrumb-item active" aria-current="page">Master Motor</li>
    </ol>
</div>

<div class="row">
    <div class="col-lg-12 mb-4">
        <div class="card mb-3">
            <div class="card-header py-2 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Search</h6>
            </div>
            <form id="MotorForm">
                <div class="card-body">
                    <div class="row">

                        <div class="col-2">
                            <input class="form-control form-control-sm  mb-3" id="PolicyNo" name="PolicyNo" type="text" placeholder="Policy No">
                        </div>

                        <div class="col-2">
                            <input class="form-control form-control-sm  mb-3" id="PolStartDate" name="PolicyStartDate" type="date" placeholder="Policy Start Date">

                        </div>
                        <div class="col-2">
                            <input class="form-control form-control-sm  mb-3" id="PolEndDate" name="PolicyEndDate" type="date" placeholder="Policy End Date">
                        </div>
                        <div class="col-2">
                            <input class="form-control form-control-sm  mb-3" id="MobileNo" name="MobileNo" type="text" placeholder="Mobile No">
                        </div>

                        <div class="col-2 text-center">
                            <button class="btn btn-primary btn-sm" id="btnSearch" type="button">
                                <i class="fas fa-search fa-sm"></i> Search
                            </button>
                        </div>

                    </div>

                </div>
            </form>
        </div>
        <!-- Simple Tables -->

        <div class="card">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">List of Motor Policies</h6>

                <input type="file" name="postedFile" id="fileUploadMotor" accept=".xls,.xlsx" />
                <input type="hidden" id="txtMotorMaster" name="txtMotorMaster" value="1">

                <button type="submit" id="btnUpload" class="btn btn-success btn-sm waves-effect">Upload Data</button>
                <a href="~/MasterUploads/MotorBulkUpload.xlsx" download>Download Sample format</a>


                <a class="btn btn-primary btn-sm mx-1" href="MotorInsurance#step-1">
                    <i class="fas fa-user-plus fa-sm"></i> Add
                    Single Policy
                </a>

                <button class="btn btn-primary btn-sm mx-1" type="button" data-toggle="modal"
                        data-target="#uploadBulk">
                    <i class="fas fa-upload fa-sm"></i> Bulk Upload Policy
                </button>

                <button class="btn btn-primary btn-sm mx-1" type="button">
                    <i class="fas fa-download fa-sm"></i>
                    Download Policy
                </button>


            </div>
            <div class="table-responsive">
                <table id="tblMotor" class="table align-items-center table-flush">
                    <tr>
                        <th>Policy No</th>
                        <th>Issue Date</th>
                        <th>Branch</th>
                        <th>Assured Name</th>
                        <th>Assured MobileNumber</th>
                        <th>Policy StartDate</th>
                        <th>Policy EndDate</th>
                        <th>Actions</th>


                    </tr>
                    @if (Model != null)
                    {
                        foreach (var d in Model)
                        {
                            <tr>
                                <td>@d.PolicyNo</td>
                                <td>@d.IssueDate.ToString("dd-MM-yyyy")</td>
                                <td>@d.Branch</td>
                                <td>@d.AssuredName</td>
                                <td>@d.MobileNo</td>
                                <td>@d.PolicyStartDate</td>
                                <td>@d.PolicyEndDate</td>

                                @*<td>
                                        <a href="#" class="btn btn-sm btn-primary" data-toggle="modal"
                                           data-target="#myModal">Detail</a>
                                    </td>*@
                                <td class="d-flex flex-row align-items-center justify-content-between">
                                    <i class="fas fa-pencil-alt pointer" aria-hidden="true" data-toggle="modal"
                                       data-target="#myModal" onclick="renewal(@d.MotorId)">

                                    </i>
                                    <i class="fas fa-eye pointer" aria-hidden="true" data-toggle="modal"
                                       data-target="#myModal"></i>
                                    <a href="Edit?MotorId=@d.MotorId">Edit</a>
                                </td>

                            </tr>
                        }
                    }
                </table>

            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>
