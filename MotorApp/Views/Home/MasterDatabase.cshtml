                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-8 mx-auto">
                        <form class="form-horizontal">
                            <div class="form-group row mb-3">
                                <label for="inputEmail3" class="col-3 col-form-label">Customer Code</label>
                                <div class="col-9">
                                    <input type="text" class="form-control form-control-sm" id="CustomerCode" value="CSH014" readonly>
                                </div>
                            </div>
                            <div class="form-group row mb-3">
                                <label for="inputEmail3" class="col-3 col-form-label">Customer Name</label>
                                <div class="col-9">
                                    <input type="text" class="form-control form-control-sm" id="CustomerName"
                                           value="Cash Customers-Amarat" readonly>
                                </div>
                            </div>
                            <div class="form-group row mb-3">
                                <label for="inputEmail3" class="col-3 col-form-label">Vehicle Type</label>
                                <div class="col-9">
                                    <input type="text" class="form-control form-control-sm" id="VehicleType" value="Private Vehicle"
                                           readonly>
                                </div>
                            </div>
                            <div class="form-group row mb-3">
                                <label for="inputEmail3" class="col-3 col-form-label">Vehicle Make</label>
                                <div class="col-9">
                                    <input type="text" class="form-control form-control-sm" id="VehicleMake" value="Hyundai Creta"
                                           readonly>
                                </div>
                            </div>
