@model IEnumerable<MotorApp.BusinessEntities.MotorModel>
@using MotorApp.BusinessEntities;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Master Motor</h1>
    <ol class="breadcrumb my-2">
        <li class="breadcrumb-item"><a href="./">Home</a></li>
        <li class="breadcrumb-item">Masters</li>
        <li class="breadcrumb-item active" aria-current="page">Master Motor</li>
    </ol>
</div>
<div class="row">
    <div class="col-lg-12 mb-4">
        <div class="card mb-3">
            <div class="card-header py-2 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Search</h6>
            </div>
            <form id="MotorForm">
                <div class="card-body">
                    <div class="row">
                        @using (Html.BeginForm("MasterDatabase", "Home", FormMethod.Get))
                        {

                            <div class="col-2">
                                <input class="form-control form-control-sm  mb-3" name="PolicyNo" type="text" placeholder="Policy No">

                            </div>
                            <div class="col-2">
                                <input class="form-control form-control-sm  mb-3" name="AgentCode_BrokerCode" type="text" placeholder="Producer Name">
                            </div>
                            <div class="col-2">
                                <input class="form-control form-control-sm  mb-3" name="AssuredName" type="text" placeholder="Assured Name">
                            </div>


                            <div class="col-2">
                                <input class="form-control form-control-sm  mb-3" name="Branch" type="text" placeholder="Branch">
                            </div>
                            <div class="col-2">
                                <select class="form-control form-control-sm" name="Status" required="required">
                                    <option disabled selected> -- select an option -- </option>
                                    <option>Completed</option>
                                    <option>Dropped</option>
                                    <option>On Hold</option>
                                </select>
                            </div>
                            <div class="col-2 text-center">
                                @*<a>Search</a>*@
                                @*<button class="btn btn-primary btn-sm" type="button">
                                        <i class="fas fa-search fa-sm"></i> Search
                                    </button>*@
                                <input class="btn btn-primary btn-sm" type="submit" value="Search" />
                            </div>
                        }
                    </div>
                </div>
            </form>
        </div>
        <!-- Simple Tables -->
        <div class="card">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">List of Motor Policies</h6>
                <div class="d-none">
                    <input type="file" name="postedFile" id="fileUploadMotor" accept=".xls,.xlsx" />
                    <input type="hidden" id="txtMotorMaster" name="txtMotorMaster" value="1">
                    @*<button type="submit" id="btnUpload" class="btn btn-success btn-sm waves-effect">Upload Data</button>*@
                </div>
                <div>
                    <a class="btn btn-primary btn-sm mx-1" href="MotorInsurance#step-1">
                        <i class="fas fa-user-plus fa-sm"></i> Add
                        Single Policy
                    </a>
                    <button class="btn btn-primary btn-sm mx-1" type="button" data-toggle="modal" data-backdrop="static"
                            data-target="#uploadBulk">
                        <i class="fas fa-upload fa-sm"></i> Bulk Upload Policy
                    </button>
                    <button class="btn btn-primary btn-sm mx-1" type="button">
                        <i class="fas fa-download fa-sm"></i>
                        Download Policy
                    </button>
                </div>
            </div>
            <div class="table-responsive">
                <table id="tblMotor" class="table align-items-center table-flush">
                    <tr>
                        <th>Policy No</th>
                        <th>Producer Name</th>
                        <th>Assured Name</th>
                        <th>Mobile Number</th>
                        <th>Branch</th>
                        <th>Status</th>
                        <th>Actions</th>

                    </tr>
                    @if (Model.Count() == 0)
                    {

                        <tr>
                            <td colspan="5">
                                No record found
                            </td>
                        </tr>

                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.PolicyNo)</td>
                                <td>@Html.DisplayFor(modelItem => item.AgentCode_BrokerCode)</td>
                                <td>@Html.DisplayFor(modelItem => item.AssuredName)</td>
                                <td>@Html.DisplayFor(modelItem => item.MobileNo)</td>
                                <td>@Html.DisplayFor(modelItem => item.Branch)</td>
                                @if (item.Status.Equals("Completed"))
                                {
                                    <td><span class="badge badge-success">@Html.DisplayFor(modelItem => item.Status)</span></td>
                                }
                                @if (item.Status.Equals("Dropped"))
                                {
                                    <td><span class="badge badge-danger">@Html.DisplayFor(modelItem => item.Status)</span></td>
                                }
                                @if (item.Status.Equals("On Hold"))
                                {
                                    <td><span class="badge badge-info">@Html.DisplayFor(modelItem => item.Status)</span></td>
                                }
                                @if (item.Status.Equals(""))
                                {
                                    <td><span class="badge badge-info"></span></td>
                                }
                                <td class="d-flex flex-row align-items-center justify-content-between">
                                    <i class="fas fa-eye pointer" aria-hidden="true" data-toggle="modal"
                                       data-target="#myModal" onclick="renewal(@item.MotorId)">
                                    </i>
                                    @*<i class="fas fa-eye pointer" aria-hidden="true" data-toggle="modal"
                                        data-target="#myModal"></i>*@
                                    <a href="Edit?MotorID=@item.MotorId"><i class="fas fa-pencil-alt pointer" aria-hidden="true"></i></a>
                                </td>
                            </tr>

                        }
                    }
                </table>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>
